		<form class="form-horizontal" role="form">

			<div class="form-group">
				<label for="input-name" class="col-sm-6 control-label align-right">Contact Name:</label>
				<div class="col-sm-6">
					<input type="text" class="form-control fixed-width-input"  id="input-name" placeholder="Contact Name">
				</div>
			</div>
			<div class="form-group">
				<label for="input-location" class="col-sm-6 control-label align-right">Location:</label>
				<div class="col-sm-6">
					<input type="text" class="form-control fixed-width-input" id="input-location" placeholder="Location">
				</div>
			</div>
			<div class="form-group">
				<label for="input-contact-number" class="col-sm-6 control-label align-right">Contact Number:</label>
				<div class="col-sm-6">
					<input type="text" class="form-control fixed-width-input" id="input-contact-number" placeholder="Contact Number">
				</div>
			</div>

			<div class="form-group">
				<label for="input-email-address" class="col-sm-6 control-label align-right">Email Address:</label>
				<div class="col-sm-6">
					<input type="text" class="form-control fixed-width-input" id="input-email-address" placeholder="Email Address">
				</div>
			</div>

			<div class="form-group">
				<label for="input-email-address" class="col-sm-6 control-label align-right">Preferred Contact Method:</label>
				<div class="col-sm-6">
					<label class="radio-inline">
						<input type="radio" name="contact-method" value="Phone">Phone
					</label>
					<label class="radio-inline">
						<input type="radio" name="contact-method" value="Email">Email
					</label>
				</div>
			</div>
			
			<div class="form-group">
				<div class="col-sm-offset-6 col-sm-6">
					<button type="submit" class="btn btn-primary">Submit</button>
				</div>
			</div>
